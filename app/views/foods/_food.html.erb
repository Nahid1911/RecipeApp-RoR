<div id="<%= dom_id food %>" class="d-flex justify-content-between align-items-center border border-dark">
  <p>
    <strong>Name:</strong>
    <%= food.name %>
  </p>

  <p>
    <strong>Measurement unit:</strong>
    <%= food.measurement_unit %>
  </p>

  <p>
    <strong>User:</strong>
    <%= food.user_id %>
  </p>

  <%= button_to "Destroy this food", @food, method: :delete %>

</div>
